!!!
%html{:lang => "en-EN"}
  %head
    %meta{:charset => "utf-8"}
    %title DP T Phonebook
    %link{:href => "favicon.ico", :rel => "icon", :type => "image/vnd.microsoft.icon"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #wrapper
      %header
        = image_tag "logo.png", :class => 'logo'
        %h1 DP T Phonebook
      %section#content
        = yield
    %footer
    #overshadow
    #cntfrm
      .wrapper
        %form#contact-form{name: 'contact-form', action: contacts_path, method: 'post'}
          %p.title New contact
          %input#contact_id{name: 'contact[id]', type: 'hidden', value: Time.now.to_i}
          .name
            %input#contact_name{name: 'contact[name]', type: 'text', placeholder: 'Enter name'}
          %ol.numbers
            %li
              %input#contact_phones_attributes_0_number{name: 'contact[phones_attributes][0][number]', type: 'text', placeholder: 'Enter phone number' }
              %input#contact_phones_attributes_0_id{name: 'contact[phones_attributes][0][id]', type: 'hidden', value: Time.now.to_i}
          %a.addnumber.the-btn{href:'#', title: 'Add new number'} Add number
          .buttons
            %input.the-btn{type: 'submit', value: 'Save'}
            %a.close.the-btn{href: '#', title: 'Close form'} Cancel

